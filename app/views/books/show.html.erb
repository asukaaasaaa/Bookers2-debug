<div class='container'>
  <%= render 'layouts/errors', obj: @books %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td>コメント数：<%= @book.book_comments.count %></td>
        </tr>
      </table>
      <div>
      <% @book.book_comments.each do |post_comment| %>
        <%= post_comment.user.name %>
        <%= post_comment.comment %>
        <% if post_comment.user == current_user %>
            <td><%= link_to 'Destroy', book_book_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-sm btn-danger"%></td>
          <% end %>
      <% end %>
      </div>
      <div>
      <%= form_with model: [@book, @book_comment], local:true  do |f| %>
        <%= f.text_area :comment, rows: '5', class:"form-control"%></br>
        <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>